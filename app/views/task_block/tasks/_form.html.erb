<section class="mt-3 rounded border border-2" id="newTask">
  <div class="row justify-content-md-center">
    <div class="col-6 mt-3">
      <h2>Create New Task</h2>
      <%= form_with scope: :task, url: "/task_block/tasks", method: :post do |f| %>
        <div class="mt-3">
          <b><%= f.label :title, class: "form-label" %></b>
          <%= f.text_field :title, id: :title, class: "form-control" %>
          <% if flash[:errors] && flash[:errors]["title"] %>
            <% flash[:errors]["title"].each do |message| %>
              <div><%= message %></div>
            <% end %>
          <% end %>
        </div>
        <div class="mt-3">
          <b><%= f.label :description, class: "form-label" %></b>
          <%= f.text_area :description, id: :description, size:"50x5", class: "form-control" %>
          <% if flash[:errors] && flash[:errors]["description"] %>
            <% flash[:errors]["description"].each do |message| %>
              <div><%= message %></div>
            <% end %>
          <% end %>
        </div>
        <div class="mt-3">
          <%= f.submit "Create Task", class: "btn btn-default btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</section>